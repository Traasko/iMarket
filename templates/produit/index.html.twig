{% extends 'base.html.twig' %}

{% block title %}Produit index
{% endblock %}

{% block body %}
	<h1>Produit index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Stock</th>
				<th>Photo</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td>{{ produit.id }}</td>
					<td>{{ produit.nom }}</td>
					<td>{{ produit.description }}</td>
					<td>{{ produit.prix }}</td>
					<td>{{ produit.stock }}</td>
					<td>{{ produit.photo }}</td>
					<td>
						{% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-primary" href="{{ path('app_produit_show', {'id': produit.id}) }}">Voir</a>
							<a class="btn btn-warning" href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier</a>
							<a class="btn btn-danger" href="{{ path('app_produit_delete', {'id': produit.id}) }}">Supprimer</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_produit_new') }}">Create new</a>
	{% endif %}
{% endblock %}
