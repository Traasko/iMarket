{% extends 'base.html.twig' %}

{% block title %}ContenuPanier{% endblock %}

{% block body %}
    <h1>ContenuPanier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contenu_panier.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ contenu_panier.quantite }}</td>
            </tr>
            <tr>
                <th>Ajout</th>
                <td>{{ contenu_panier.ajout ? contenu_panier.ajout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contenu_panier_index') }}" class="btn btn-secondary">{{'back to list'|trans}}</a>

    <a href="{{ path('app_contenu_panier_edit', {'id': contenu_panier.id}) }}" class="btn btn-warning">{{'edit'|trans}}</a>

    {{ include('contenu_panier/_delete_form.html.twig') }}

    <a href="{{ path('app_panier_new') }}" class="btn btn-success">Ajouter au panier</a>

{% endblock %}
