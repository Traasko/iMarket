{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>{{'nom'|trans}}</th>
				<th>{{'prenom'|trans}}</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					<td>{{ user.password }}</td>
					<td>{{ user.nom }}</td>
					<td>{{ user.prenom }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-primary">{{'show'|trans}}</a>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary">{{'edit'|trans}}</a>
						{% if is_granted('ROLE_ADMIN') %}
							<a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger">{{'delete'|trans}}</a>
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">{{'no records found'|trans}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	{% if is_granted('ROLE_ADMIN') %}
		<a href="{{ path('app_user_new') }}">{{'create new'|trans}}</a>
	{% endif %}
{% endblock %}
